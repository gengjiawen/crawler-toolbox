{
  "name": "crawler-toolbox",
  "version": "1.0.0",
  "description": "my delightful project",
  "repository": {
    "url": "gengjiawen/crawler-toolbox",
    "type": "git"
  },
  "author": "jiawen geng <technicalcute@gmail.com>",
  "scripts": {
    "start": "tsc -w",
    "server": "nodemon --exec ts-node libs/index.ts",
    "clean": "rimraf build",
    "format": "prettier --write \"{examples,libs,script,test,bin}/**/*.{js,ts}\" \"*.yml\"",
    "format:check": "prettier --list-different \"{examples,libs,script,test,bin}/**/*.{js,ts}\" \"*.yml\"",
    "test": "jest",
    "build": "npm run clean && tsc -p ./tsconfig.json"
  },
  "dependencies": {
    "@mozilla/readability": "^0.4.1",
    "@types/cheerio": "^0.22.30",
    "async": "^3.2.1",
    "axios": "^0.21.1",
    "better-sqlite3": "^7.4.3",
    "cheerio": "^1.0.0-rc.10",
    "turndown": "^7.1.1",
    "turndown-plugin-gfm": "^1.0.2",
    "typeorm": "^0.2.37"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@types/jest": "27.0.1",
    "@types/node": "16.7.1",
    "husky": "7.0.1",
    "jest": "27.0.6",
    "lint-staged": "^11.1.2",
    "prettier": "2.3.2",
    "rimraf": "3.0.2",
    "ts-jest": "27.0.5",
    "typescript": "4.3.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx,md,css,html,yml}": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  }
}
